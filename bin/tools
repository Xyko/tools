#!/usr/bin/env ruby
# coding: utf-8
require 'tools'

class Tools_Exec < Thor

  # Initializing CommandManager
  ToolsUtil.new

  # Cmdapi interactive mode
  desc 'console', 'Start interactive cmdapi console.'
  def console
    Console.new
  end

  desc 'ruby?', 'Show ruby Info.'
  def ruby?
    if ENV['GEM_HOME'].nil?
      puts 'Environment variable GEM_HOME is empty, you should be using RVM for ths task to work.'
      exit(1)
    end
    Dir[ENV['GEM_HOME']+'/gems/*'].each do |entry|
      ap entry
    end


  end


  # command operations
  def method_missing(method, *args, &block)
		positional_args, opts = Thor::Options.split(args)
  end

  # All no_commands methods should be in this block (bellow)
  no_commands do
  end

end

Tools_Exec.start(ARGV)